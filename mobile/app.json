{
  "expo": {
    "name": "Cortex",
    "slug": "cortex",
    "version": "1.0.0",
    "runtimeVersion": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "cortex",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0A"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cortex.app",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Cortex needs microphone access to record voice memories.",
        "NSSpeechRecognitionUsageDescription": "Cortex uses speech recognition to transcribe your voice notes.",
        "NSCameraUsageDescription": "Cortex needs camera access to capture photo memories.",
        "NSPhotoLibraryUsageDescription": "Cortex needs photo library access to save and select photo memories."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D0D0D"
      },
      "package": "com.cortex.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-apple-authentication",
      "expo-secure-store",
      [
        "expo-audio",
        {
          "microphonePermission": "Cortex needs microphone access to record voice memories."
        }
      ],
      [
        "expo-image-picker",
        {
          "cameraPermission": "Cortex needs camera access to capture photo memories.",
          "photosPermission": "Cortex needs photo library access to save and select photo memories."
        }
      ],
      "expo-sqlite",
      "@sentry/react-native",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366F1"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "7b746ad1-cc21-43c0-b459-ca0467d9535b"
      }
    },
    "owner": "plutaslabs-organization"
  }
}
